<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Currency</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Category</th>
      <th>Images</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach(function(i) { %>
      <tr>
        <td><%= i.title %></td>
        
        <td><%= i.price %></td>

        <td><%= i.currency %></td>

        <td><%= i.quantity %></td>

        <td><%= i.description %></td>
        
        <td><%= i.category %></td>

        
        <td><img class="img-small" src="<%= i.image %>" alt="<%= i.title %>"></td>
        
        <td><a href="/items/<%= i._id %>">DETAILS</a></td>

        <td><form action="/items/<%= i._id %>?_method=DELETE" method="POST">
        <button type="submit">X</button></form></td>

      </tr>
      
      <% }); %>
     
     
    </tbody>
  </table>
  
<%- include('../partials/footer') %>
